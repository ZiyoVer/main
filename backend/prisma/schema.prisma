datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider        = "prisma-client-js"
  previewFeatures = ["postgresqlExtensions"]
}

// ============ USERS ============

model User {
  id        String   @id @default(uuid())
  email     String   @unique
  password  String
  name      String
  role      Role     @default(STUDENT)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // Relations
  chats        Chat[]
  testAttempts TestAttempt[]
  visitLogs    VisitLog[]
  profile      StudentProfile?
  testsCreated Test[]         @relation("TestCreator")
}

enum Role {
  STUDENT
  TEACHER
  ADMIN
}

model StudentProfile {
  id           String   @id @default(uuid())
  userId       String   @unique
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  // Onboarding data
  subject      String?
  targetScore  Int?
  weakTopics   String?  // JSON string array
  strongTopics String?  // JSON string array
  concerns     String?
  examDate     DateTime?
  studyHoursPerDay Float?

  // Rasch
  abilityLevel Float    @default(0.0)
  totalTests   Int      @default(0)
  avgScore     Float    @default(0.0)

  onboardingDone Boolean @default(false)
  createdAt      DateTime @default(now())
  updatedAt      DateTime @updatedAt
}

// ============ CHAT ============

model Chat {
  id        String    @id @default(uuid())
  userId    String
  user      User      @relation(fields: [userId], references: [id], onDelete: Cascade)
  title     String    @default("Yangi Suhbat")
  subject   String?
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
  messages  Message[]

  @@index([userId])
  @@index([userId, subject])
}

model Message {
  id        String   @id @default(uuid())
  chatId    String
  chat      Chat     @relation(fields: [chatId], references: [id], onDelete: Cascade)
  role      MessageRole
  content   String
  fileUrl   String?  // Agar fayl yuklangan bo'lsa
  fileType  String?  // "image", "pdf", "word"
  createdAt DateTime @default(now())

  @@index([chatId])
  @@index([chatId, createdAt])
}

enum MessageRole {
  user
  assistant
  system
}

// ============ TESTS ============

model Test {
  id          String         @id @default(uuid())
  title       String
  description String?
  creatorId   String
  creator     User           @relation("TestCreator", fields: [creatorId], references: [id], onDelete: Cascade)
  isPublic    Boolean        @default(false)
  shareLink   String         @unique @default(uuid())
  subject     String?
  timeLimit   Int?           // minutes, null = no limit
  createdAt   DateTime       @default(now())
  updatedAt   DateTime       @updatedAt
  questions   TestQuestion[]
  attempts    TestAttempt[]

  @@index([isPublic])
  @@index([creatorId])
  @@index([isPublic, createdAt])
  @@index([creatorId, createdAt])
}

model TestQuestion {
  id         String @id @default(uuid())
  testId     String
  test       Test   @relation(fields: [testId], references: [id], onDelete: Cascade)
  text       String
  options    String // JSON array: ["A", "B", "C", "D"]
  correctIdx Int
  difficulty Float  @default(0.0) // Rasch difficulty
  orderIdx   Int    @default(0)
}

model TestAttempt {
  id        String   @id @default(uuid())
  testId    String
  test      Test     @relation(fields: [testId], references: [id], onDelete: Cascade)
  userId    String
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  answers   String   // JSON: [{questionId, selectedIdx, isCorrect}]
  score     Float
  raschAbility Float @default(0.0)
  createdAt DateTime @default(now())

  @@index([testId])
  @@index([userId])
  @@index([testId, userId])
}

// ============ RAG DOCUMENTS ============

model Document {
  id        String          @id @default(uuid())
  fileName  String
  fileType  String          // "pdf", "word", "text"
  fileSize  Int
  subject   String?
  s3Url     String?
  s3Key     String?
  createdAt DateTime        @default(now())
  chunks    DocumentChunk[]

  @@index([subject])
}

model DocumentChunk {
  id         String   @id @default(uuid())
  documentId String
  document   Document @relation(fields: [documentId], references: [id], onDelete: Cascade)
  content    String
  chunkIndex Int
  embedding  String?  // JSON array of floats (vector)
  createdAt  DateTime @default(now())
}

// ============ ANALYTICS ============

model VisitLog {
  id        String   @id @default(uuid())
  userId    String?
  user      User?    @relation(fields: [userId], references: [id], onDelete: SetNull)
  action    String   // "login", "register", "page_view"
  ip        String?
  createdAt DateTime @default(now())
}

// ============ AI SETTINGS ============

model AISetting {
  id        String   @id @default(uuid())
  key       String   @unique  // "system_prompt_extra", "temperature", "max_tokens", "behavior_rules"
  value     String   // JSON or string value
  updatedAt DateTime @updatedAt
}
