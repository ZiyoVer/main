generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(uuid())
  email     String   @unique
  password  String
  name      String
  role      Role     @default(STUDENT)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  studentProfile StudentProfile?
  teacherTests   Test[]          @relation("TeacherTests")
}

enum Role {
  ADMIN
  TEACHER
  STUDENT
}

model StudentProfile {
  id           String @id @default(uuid())
  userId       String @unique
  user         User   @relation(fields: [userId], references: [id], onDelete: Cascade)
  schoolGrade  String
  targetGrade  String
  studyTime    String
  abilityLevel Float  @default(0.0)
  
  testAttempts TestAttempt[]
  weakTopics   WeakTopic[]
}

model Subject {
  id    String @id @default(uuid())
  name  String @unique
  tests Test[]
}

model Test {
  id          String   @id @default(uuid())
  title       String
  description String?
  isPublished Boolean  @default(false)
  shareLink   String?  @unique
  subjectId   String
  subject     Subject  @relation(fields: [subjectId], references: [id])
  teacherId   String
  teacher     User     @relation("TeacherTests", fields: [teacherId], references: [id])
  createdAt   DateTime @default(now())

  questions TestQuestion[]
  attempts  TestAttempt[]
}

model TestQuestion {
  id            String   @id @default(uuid())
  testId        String
  test          Test     @relation(fields: [testId], references: [id], onDelete: Cascade)
  questionText  String
  options       String[]
  correctAnswer String
  topic         String
  difficulty    Float    @default(0.0)
  attemptCount  Int      @default(0)
  correctCount  Int      @default(0)
}

model TestAttempt {
  id               String         @id @default(uuid())
  testId           String
  test             Test           @relation(fields: [testId], references: [id], onDelete: Cascade)
  studentProfileId String
  student          StudentProfile @relation(fields: [studentProfileId], references: [id], onDelete: Cascade)
  score            Int
  totalQuestions   Int
  completedAt      DateTime       @default(now())
}

model WeakTopic {
  id               String         @id @default(uuid())
  studentProfileId String
  student          StudentProfile @relation(fields: [studentProfileId], references: [id], onDelete: Cascade)
  topicName        String
  failCount        Int            @default(1)
  lastFailed       DateTime       @default(now())

  @@unique([studentProfileId, topicName])
}

model Document {
  id          String   @id @default(uuid())
  filename    String
  content     String   
  metadata    Json?    
  createdAt   DateTime @default(now())
}
